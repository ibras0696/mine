# Память JVM (под ~5 игроков и умеренный модпак)
# Если на VPS меньше 4 ГБ RAM, снизь до 3G/2G или добавь swap
MEMORY=4G

# Имя мира (должно совпадать с папкой в ./data, если мир уже существует)
LEVEL=my_world

# Тип генерации и сид (опционально)
# LEVEL_TYPE=default
# SEED=

# Игровые параметры
MAX_PLAYERS=5
MODE=survival
DIFFICULTY=normal
ONLINE_MODE=TRUE  # Для оффлайн-лаунчера поставь FALSE (риск для безопасности)
ALLOW_CHEATS=true
ENABLE_WHITELIST=false
WHITELIST=Nick1,Nick2
ENFORCE_WHITELIST=false

# Доп. настройки безопасности/геймплея
# ENABLE_COMMAND_BLOCK=true
# SPAWN_PROTECTION=16

# Дистанции (умеренные значения для снижения нагрузки)
VIEW_DISTANCE=8
SIMULATION_DISTANCE=8

# Часовой пояс
TIMEZONE=Europe/Moscow

# JVM оптимизации (по желанию)
# USE_AIKAR_FLAGS=true

# Отключаем RCON (нет бэкапов и внешнего управления)
ENABLE_RCON=false
# RCON_PASSWORD=ChangeMe
# RCON_PORT=25575

# Radmin VPN: IP сервера в виртуальной сети (замени на свой адрес)
RADMIN_VPN_IP=26.0.0.1
# Примеры для whitelist/ops (оставлены для совместимости)
# OPS=YourNick