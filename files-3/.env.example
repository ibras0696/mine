# Память JVM (под ~5 игроков и умеренный модпак)
# Если на VPS меньше 4 ГБ RAM, снизь до 3G/2G или добавь swap
MEMORY=4G

# Имя мира (должно совпадать с папкой в ./data, если мир уже существует)
LEVEL=my_world

# Игровые параметры
MAX_PLAYERS=5
MODE=survival
DIFFICULTY=normal
ONLINE_MODE=TRUE  # Для оффлайн-лаунчера поставь FALSE (риск для безопасности)

# Дистанции (умеренные значения для снижения нагрузки)
VIEW_DISTANCE=8
SIMULATION_DISTANCE=8

# Часовой пояс
TIMEZONE=Europe/Moscow

# Отключаем RCON (нет бэкапов и внешнего управления)
ENABLE_RCON=false

# Radmin VPN: IP сервера в виртуальной сети (замени на свой адрес)
RADMIN_VPN_IP=26.0.0.1

# Примеры для whitelist/ops (раскомментируй в docker-compose.yml, если нужно)
# ENABLE_WHITELIST=true
# ENFORCE_WHITELIST=true
# WHITELIST=Nick1,Nick2
# OPS=YourNick